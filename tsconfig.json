{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "baseUrl": "./src",
      "rootDir": "./src",
      "paths": {
          "*": ["types/*"],
          "*": ["*"],
          "src/*" : ["./src/*"]
      }
  },
  "include": [
      "src/**/*",
  ]
}  
